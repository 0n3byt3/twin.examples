{
  "babelMacros": {
    "twin": {
      "config": "tailwind.config.js",
      "preset": "styled-components",
      "autoCssProp": true,
      "debugProp": true,
      "debugPlugins": false,
      "debug": false
    }
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch"
  },
  "dependencies": {
    "@babel/core": "7.12.3",
    "preact": "^10.5.7",
    "styled-components": "5.2.1",
    "twin.macro": "1.12.1"
  },
  "devDependencies": {
    "if-env": "^1.0.4",
    "preact-cli": "^3.0.3"
  }
}
